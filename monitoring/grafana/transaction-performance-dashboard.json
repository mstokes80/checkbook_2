{
  "dashboard": {
    "id": null,
    "title": "Transaction Performance Dashboard",
    "tags": ["checkbook", "transactions", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transaction API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{uri=~\"/api/transactions.*\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{uri=~\"/api/transactions.*\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{uri=~\"/api/transactions.*\"}[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "thresholds": [
          {
            "value": 0.2,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 2,
        "title": "Transaction API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{uri=~\"/api/transactions.*\"}[5m])",
            "legendFormat": "{{method}} {{uri}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Transaction API Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{uri=~\"/api/transactions.*\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{uri=~\"/api/transactions.*\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per second",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.01],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["B", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "Transaction API Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count{state=\"active\"}",
            "legendFormat": "Active connections",
            "refId": "A"
          },
          {
            "expr": "pg_stat_activity_count{state=\"idle\"}",
            "legendFormat": "Idle connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connection count",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 5,
        "title": "Transaction Creation Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(transactions_created_total[5m])",
            "legendFormat": "Transactions/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 6,
        "title": "Transaction Failures",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(transaction_creation_failures_total[1h])",
            "legendFormat": "Failures/hour",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Running Balance Calculation Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(running_balance_calculation_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.05
                },
                {
                  "color": "red",
                  "value": 0.1
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count by (user_id) (rate(user_transaction_activity_total[5m]) > 0))",
            "legendFormat": "Active users",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 9,
        "title": "Category Usage Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (category_name) (rate(transactions_by_category_total[1h]))",
            "legendFormat": "{{category_name}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 10,
        "title": "Bulk Operation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(bulk_transaction_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, rate(bulk_transaction_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "90th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(bulk_transaction_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (seconds)",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container=\"checkbook-api\"} / 1024 / 1024",
            "legendFormat": "Memory usage (MB)",
            "refId": "A"
          },
          {
            "expr": "container_spec_memory_limit_bytes{container=\"checkbook-api\"} / 1024 / 1024",
            "legendFormat": "Memory limit (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "max": null,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 12,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"checkbook-api\"}[5m]) * 100",
            "legendFormat": "CPU usage (%)",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU usage (%)",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(environment)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "deployment_info",
          "enable": true,
          "iconColor": "blue"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}