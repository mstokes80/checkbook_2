# Production Environment Configuration for Checkbook Application
# Copy this file to .env.prod and fill in with actual production values
# IMPORTANT: Never commit .env.prod to version control!

# ============================================
# Application Version
# ============================================
APP_VERSION=1.0.0

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_DB=checkbook_prod
POSTGRES_USER=checkbook_user
# IMPORTANT: Use a strong, randomly generated password
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ============================================
# Redis Configuration
# ============================================
# IMPORTANT: Use a strong, randomly generated password
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_REDIS_PASSWORD

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Generate a strong secret key (minimum 256 bits / 32 characters)
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_VERY_STRONG_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRATION=86400000

# ============================================
# Application URLs
# ============================================
# Domain for local network deployment
APP_DOMAIN=checkbook.local-stokesnet.net
APP_BASE_URL=https://checkbook.local-stokesnet.net
VITE_API_BASE_URL=https://checkbook.local-stokesnet.net/api

# ============================================
# Email Configuration (SMTP)
# ============================================
# For production, use a real SMTP server (Gmail, SendGrid, AWS SES, etc.)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true
MAIL_FROM=noreply@your-domain.com

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO

# ============================================
# SSL/TLS Configuration
# ============================================
# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@your-domain.com

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ============================================
# Security Settings
# ============================================
# Set to 'true' for production
ENABLE_HTTPS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=false

# ============================================
# Docker Compose Project Name
# ============================================
COMPOSE_PROJECT_NAME=checkbook-prod